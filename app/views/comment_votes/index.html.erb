<% @comment_votes.each do |comment_vote| %>
  <tr>
    <td><%= comment_vote.comment %></td>
    <td><%= comment_vote.user %></td>
    <td><%= link_to 'Show', comment_vote %></td>
    <td><%= link_to 'Edit', edit_comment_vote_path(comment_vote) %></td>
    <td><%= link_to 'Destroy', comment_vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

